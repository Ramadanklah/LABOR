# Production Environment Configuration
NODE_ENV=production

# Server Configuration
PORT=5000
HOST=0.0.0.0

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/laborresults_prod?schema=public"

# JWT Configuration - CHANGE THESE IN PRODUCTION
JWT_SECRET="your-super-secure-jwt-secret-key-change-this-in-production-minimum-32-chars"
JWT_EXPIRE=7d
JWT_COOKIE_EXPIRE=7

# CORS Configuration
CORS_ORIGIN="https://yourdomain.com"
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SENSITIVE_ENDPOINT_RATE_LIMIT=5

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET="your-session-secret-change-this-in-production"
WEBHOOK_SECRET="your-webhook-secret-for-signature-verification"

# Email Configuration (for Gmail SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER="your-gmail-address@gmail.com"
SMTP_PASS="your-app-specific-password"
FROM_EMAIL="your-gmail-address@gmail.com"
FROM_NAME="Lab Results System"

# Email Verification
EMAIL_VERIFICATION_EXPIRE=24h
PASSWORD_RESET_EXPIRE=1h

# Logging Configuration
LOG_LEVEL=warn
LOG_FILE_ERROR=logs/error.log
LOG_FILE_COMBINED=logs/combined.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES="text/plain,application/csv,text/csv"

# Mirth Connect Integration
MIRTH_WEBHOOK_SECRET="your-mirth-webhook-secret"
MIRTH_ALLOWED_IPS="192.168.1.100,10.0.0.50"
MIRTH_CONNECT_URL="http://localhost:8080/mirth"

# Two-Factor Authentication
TWO_FACTOR_ISSUER="Lab Results System"
TWO_FACTOR_WINDOW=2

# Database Security
DB_CONNECTION_LIMIT=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=60000

# Cache Configuration
CACHE_TTL=3600
CACHE_CHECK_PERIOD=600

# Admin Configuration
ADMIN_EMAIL="admin@yourdomain.com"
DEFAULT_ADMIN_PASSWORD="ChangeThisSecurePassword123!"

# SSL/TLS Configuration
SSL_CERT_PATH="/path/to/ssl/cert.pem"
SSL_KEY_PATH="/path/to/ssl/private.key"

# Monitoring and Health Checks
HEALTH_CHECK_INTERVAL=30000
METRICS_ENDPOINT="/metrics"

# Backup Configuration
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION="/backups"

# IP Whitelist for Admin Access (comma-separated)
ADMIN_IP_WHITELIST="127.0.0.1,192.168.1.0/24"

# Session Configuration
SESSION_TIMEOUT=3600000
CONCURRENT_SESSIONS_LIMIT=3

# Audit Configuration
AUDIT_LOG_RETENTION_DAYS=365
AUDIT_LOG_LEVEL=info