# Lab Results System Environment Configuration
# Copy this file to .env and update the values

# Application Configuration
NODE_ENV=development
PORT=5000
LOG_LEVEL=info

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-here-change-this-in-production
ENABLE_CSRF=true

# Multi-tenant Configuration
DEFAULT_TENANT_ID=default
ALLOWED_TENANTS=tenant1,tenant2,tenant3

# Mirth Integration
MIRTH_OUTBOUND_URL=http://localhost:8080/api/mirth/ldt
MIRTH_OUTBOUND_SECRET=your-mirth-secret-key
MIRTH_OUTBOUND_TIMEOUT_MS=10000
MIRTH_OUTBOUND_RETRIES=2
MIRTH_WEBHOOK_SECRET=your-webhook-secret

# Frontend Configuration
FRONTEND_URL=http://localhost:3000
FRONTEND_URLS=http://localhost:3000,http://localhost:5173

# Lab Information
LAB_NAME=Labor Results System
LAB_STREET=Medical Center Street 1
LAB_ZIP=12345
LAB_CITY=Medical City
LAB_PHONE=+49-123-456789
LAB_EMAIL=info@laborresults.de

# Default User Passwords (Development Only)
ADMIN_DEFAULT_PASSWORD=admin123
DOCTOR_DEFAULT_PASSWORD=doctor123
LAB_DEFAULT_PASSWORD=lab123

# Metrics Configuration
METRICS_TOKEN=your-metrics-token
METRICS_ALLOW_IPS=127.0.0.1,::1

# Swagger Documentation
ENABLE_SWAGGER=true

# Admin User Creation Logging
LOG_ADMIN_CREATION=true